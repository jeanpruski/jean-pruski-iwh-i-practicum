doctype html
html
  head
    title #{page_title}
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/style.css")
  body
    h1 #{title}

    a(href="/") Home

    form(action="/update-cobj", method="post")
      label(for="name") Name:
      input(type="text", name="name", required)
      label(for="first_skill") First Skill:
      input(type="text", name="first_skill", required)
      label(for="secondary_skill") Secondary Skill:
      input(type="text", name="secondary_skill", required)
      
      button(type="submit") Update

    table
      thead
        tr
          th Name
          th First Skill
          th Secondary Skill
      tbody
        each item in data
          tr
            td #{item.properties.name}
            td #{item.properties.first_skill}
            td #{item.properties.secondary_skill}